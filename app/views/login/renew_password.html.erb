<div class="login_container">
  <div class="login_content">
    <header>
        <h2><%= current_shop.name %></h2>
    </header>

    <section id="title">
      <h2>Nova Senha</h2>
      <% if notice %>
        <p class="alert alert-error"><%= notice %></p>
      <% end %>
    </section>

    <%= form_for(resource, :as => :user, :url => renew_password_path) do |f| %>
      <div class="control-group">
        <%= f.label :password, :class => "control-label" %>
        <div class="controls">
          <%= f.password_field :password, :class => "input-xlarge" %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :password_confirmation, :class => "control-label" %>
        <div class="controls">
          <%= f.password_field :password_confirmation, :class => "input-xlarge" %>
        </div>
      </div>

      <button type="submit">Salvar</button>
    <% end %>

    <% content_for(:javascripts) do %>
      <script type="text/javascript">
        $(function() {
          $("#user_password").focus();
        });
      </script>
    <% end %>

  </div>
</div>
